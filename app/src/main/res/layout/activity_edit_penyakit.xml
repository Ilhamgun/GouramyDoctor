<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".adminUI.Penyakit.EditPenyakit">

    <EditText
        android:id="@+id/kodePenyakit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:padding="14dp"
        android:background="@drawable/custom_edittext_disabled"
        android:hint="Kode Penyakit"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/namaPenyakit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:padding="14dp"
        android:background="@drawable/custom_edittext"
        android:hint="Nama Penyakit"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/deskripsiPenyakit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:padding="14dp"
        android:background="@drawable/custom_edittext"
        android:hint="Deskripsi Penyakit"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/solusiPenyakit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:padding="14dp"
        android:background="@drawable/custom_edittext"
        android:hint="Solusi Penanggulangan Penyakit"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/buttonSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue"
        android:layout_marginHorizontal="30dp"
        android:padding="18dp"
        android:text="Simpan"
        android:textSize="16sp"
        app:cornerRadius="5dp" />

</LinearLayout>