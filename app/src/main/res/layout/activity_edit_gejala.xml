<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adminUI.Gejala.EditGejala">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Edit Gambar"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/gambarGejala"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Edit Video"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <VideoView
        android:id="@+id/videoGejala"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/kodeGejala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:padding="14dp"
        android:background="@drawable/custom_edittext_disabled"
        android:hint="Kode Gejala"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/namaGejala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:padding="14dp"
        android:background="@drawable/custom_edittext"
        android:hint="Nama Gejala"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/buttonSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue"
        android:layout_marginHorizontal="30dp"
        android:padding="18dp"
        android:text="Simpan"
        android:textSize="16sp"
        app:cornerRadius="5dp" />

</LinearLayout>